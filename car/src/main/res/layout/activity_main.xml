<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:paddingTop="25dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:background="@drawable/ble_small_log"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/toolbar_text"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/septal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/main_toolbar"
        android:background="#C0C0C0"
        />
    <LinearLayout
        android:id="@+id/main_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/septal_line"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/septal_line3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="#DDDDDD"
            android:text="@string/connected"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="5dp"
            android:gravity="bottom"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noConnect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_add_ble"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/connectedRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/enabled_device"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#DDDDDD"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enabledDevice"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                />
            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/circle_loading"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                style="?android:attr/progressBarStyleSmall"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noSearch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂未可用设备"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/searchingRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                />
        </RelativeLayout>

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/bottom_CardView"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            >
            <LinearLayout
                android:id="@+id/search_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/searchIMG"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/search"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/search"
                    android:textSize="10sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/moreIMG"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/more"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/more"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
