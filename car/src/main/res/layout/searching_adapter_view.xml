<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/car_notconnted"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/searching_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BleDeviceBleDeviceBleDeviceBleDevice"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:maxLength="14"
                android:ellipsize="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/searching_device_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FF:FF:70:00:11:44"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/connectIMG"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/add_ble" />
    </LinearLayout>


    <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--/>-->


</LinearLayout>
